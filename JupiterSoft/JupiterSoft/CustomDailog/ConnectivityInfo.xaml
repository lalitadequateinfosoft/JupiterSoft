<Window x:Class="JupiterSoft.CustomDailog.ConnectivityInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JupiterSoft.CustomDailog"
        mc:Ignorable="d"
        Title="Address and Registers Information"
        Height="350"
        Width="600"
        WindowStyle="None"
        AllowsTransparency="True"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">
    <Grid Background="Transparent">
        <Border 
                CornerRadius="5"
                BorderThickness="1"
                BorderBrush="#0d447a"
                Background="White"
                Margin="10"
                >
            <Border.Effect>
                <DropShadowEffect Color="Black"
                          Direction="270"
                          BlurRadius="12"
                          ShadowDepth="3" />
            </Border.Effect>
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Border 
                            Grid.Row="0"
                            Margin="0.8"
                            Background="#0082ca"
                            BorderBrush="#0082ca"
                            BorderThickness="1"
                            CornerRadius="5,5,0,0"
                            Padding="15">
                    <Label x:Name="HeaderTitle" Content="PROVIDE ADDRESS AND CONNECTED REGISTERS INFORMATION OF CONTROL CARD" Foreground="White"/>
                </Border>
                <ScrollViewer Grid.Row="1" 
                            x:Name="OutPutArea"
                            VerticalScrollBarVisibility="Auto">

                    <Grid  HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0"
                               Grid.Column="0"
                               Content="ADDRESS"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"/>
                        <StackPanel 
                            Grid.Row="0"
                            Grid.Column="1" VerticalAlignment="Center">
                            <TextBox x:Name="AddressBox"
                                     Margin="5"
                                      Width="150"
                                     Height="30"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     BorderBrush="Black"
                                     BorderThickness="1"
                                 />
                        </StackPanel>

                        <Label Grid.Row="1"
                               Grid.Column="0"
                               Content="PUSHING ARM CONNECTED TO REGISTER"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"/>
                        <StackPanel 
                            Grid.Row="1"
                            Grid.Column="1"
                            VerticalAlignment="Center">
                            <TextBox x:Name="PushingArm"
                                     Margin="5"
                                      Width="150"
                                     Height="30"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     BorderBrush="Black"
                                     BorderThickness="1"
                                 />
                        </StackPanel>
                        <Label Grid.Row="2"
                               Grid.Column="0"
                               Content="SENSOR CONNECTED TO REGISTER"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"/>
                        <StackPanel 
                            Grid.Row="2"
                            Grid.Column="1"
                            VerticalAlignment="Center">
                            <TextBox x:Name="Sensors"
                                     Margin="5"
                                      Width="150"
                                     Height="30"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     BorderBrush="Black"
                                     BorderThickness="1"
                                 />
                        </StackPanel>
                        
                    </Grid>
                </ScrollViewer>
                <Grid 
                    Grid.Row="2"
                    Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <Button 
                            Background="#0d447a"
                            BorderBrush="#0d447a"
                            Foreground="White"
                            Content="SUBMIT"
                        HorizontalAlignment="Stretch"
                        Margin="50,5,20,0"
                        Click="BtnOk_Click"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <Button 
                            Background="Red"
                            BorderBrush="Red"
                            Foreground="White"
                            Content="CANCEL"
                            HorizontalAlignment="Stretch"
                            Margin="20,5,50,0"
                            Click="BtnCancel_Click"/>
                    </StackPanel>



                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
